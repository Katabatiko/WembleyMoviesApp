<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WembleyMoviesApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wembly</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor">?attr/colorOnSecondary</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WembleyMoviesApp.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.WembleyMoviesApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WembleyMoviesApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WembleyTabLayoutStyle" parent="Widget.Design.TabLayout" >
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <!-- necesario para mode fill en landscape -->
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">@color/wembly</item>
    </style>
</resources>